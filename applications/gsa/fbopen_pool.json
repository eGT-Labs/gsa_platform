		{
			"name":"fbopen_pool",
			"platform":"linux",
			"min-size":3,
			"max-size":3,
			"wait-for-nodes":1,
			"sync_siblings":true,
			"run_list":[
				"role[gsa-fbopen-deploy]]"
			],
			"vpc":{
<% if !$vpc_id then %>
				"vpc_name":"fbopen",
				"nat_host_name":"bastion",
				"nat_ssh_user":"root",
				"subnets":[
					{
						"subnet_name":"Private1"
					},
					{
						"subnet_name":"Private2"
					},
					{
						"subnet_name":"Private3"
					}
				]
<% else %>
				"vpc_id":"<%= $vpc_id %>",
				"nat_host_id":"<%= $nat_host_id %>",
				"nat_ssh_user":"<%= $nat_ssh_user %>",
				"subnets":[
					{
						"subnet_id":"<%= $subnet_private_1 %>"
					},
					{
						"subnet_id":"<%= $subnet_private_2 %>"
					},
					{
						"subnet_id":"<%= $subnet_private_3 %>"
					}
				]
<% end %>
			},
			"add_firewall_rules": [
				{
					"rule_name":"active_directory"
				}
			],
			"basis":{
				"launch-config":{
					"name":"ad",
					<%= ECAP::Config.include("/win2k12-ami.json") %>,
<% if $environment == "dev" then %>
					"size":"t2.medium"
<% else %>
					"size":"m3.large"
<% end %>
				}
			}
		}
